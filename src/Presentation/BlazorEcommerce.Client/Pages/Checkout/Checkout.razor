@page "/checkout"

<div class="container mt-5">
	<div class="row">
		<div class="col-8">
			<Stepper CurrentStep="CurrentStep"></Stepper>
			<div class="mx-auto p-3 bg-light-subtle shadow-sm rounded-2">
				@switch (CurrentStep)
				{
					case 1:
						<CheckoutAddress Move="MoveBack"></CheckoutAddress>
						break;
					case 2:
						<CheckoutDelivery Move="MoveBack"></CheckoutDelivery>
						break;
					case 3:
						<CartSummary Move="MoveBack" IsCart="false"></CartSummary>
						break;
					default:
						Console.WriteLine("Last");
						break;
				}
			</div>
		</div>
		<div class="col-4">
			<OrderTotals></OrderTotals>
		</div>

	</div>
</div>

@code {

	private int CurrentStep = 1;

	private void MoveBack(int step)
	{
		CurrentStep = step;
	}
	
}
